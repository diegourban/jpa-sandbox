<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	
	<persistence-unit name="jpa-sandbox-hsqldb">
		<!-- provedor/implementacao do JPA -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!-- mapped entities -->
		<class>br.com.urban.sandbox.jpa.model.Usuario</class>
		<class>br.com.urban.sandbox.jpa.model.Papel</class>
		<class>br.com.urban.sandbox.jpa.model.Categoria</class>
		<class>br.com.urban.sandbox.jpa.model.Loja</class>
		<class>br.com.urban.sandbox.jpa.model.Produto</class>

		<properties>
			<!-- connections data -->
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:jpa-sandbox.db;shutdown=true" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />

			<!-- hibernate properties -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			
			<!-- Enables/disabled hibernate second level cache -->
			<property name="hibernate.cache.use_second_level_cache" value="true" />	<!-- second level cache for entities with @Cache  -->
			<property name="hibernate.cache.use_query_cache" value="true" /> <!-- second level cache for queries with hint -->
			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory" />
			
			<!-- Statistics -->
			<property name="hibernate.generate_statistics" value="true" />
		</properties>
	</persistence-unit>
</persistence>